# TrustChain Agent production profile

# LLM endpoint
VITE_OPENAI_API_KEY=REPLACE_ME
VITE_OPENAI_BASE_URL=https://openrouter.ai/api/v1

# MCP/Backend endpoints
VITE_BACKEND_URL=
VITE_API_BASE=

# TrustChain strict profile
VITE_TRUSTCHAIN_STRICT_MODE=true
VITE_TRUSTCHAIN_ALLOW_LOCAL_UNSIGNED_MCP=false

# Внешний signer (KMS/HSM bridge)
# Пример для Vault bridge: http://127.0.0.1:9780
VITE_TRUSTCHAIN_EXTERNAL_SIGNER_URL=
VITE_TRUSTCHAIN_EXTERNAL_SIGNER_TIMEOUT_MS=5000
VITE_TRUSTCHAIN_EXTERNAL_SIGNER_CANARY=true
VITE_TRUSTCHAIN_EXTERNAL_SIGNER_KEY_ID=tc_kid_prod_canary
VITE_TRUSTCHAIN_EXTERNAL_SIGNER_PUBLIC_KEY=BASE64_PUBKEY_CANARY
VITE_TRUSTCHAIN_EXTERNAL_SIGNER_SIGN_PATH=/sign
VITE_TRUSTCHAIN_EXTERNAL_SIGNER_HEALTH_PATH=/health
